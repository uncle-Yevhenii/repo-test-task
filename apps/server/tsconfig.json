{
  "extends": "@repo/typescript-config/server.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@models/*": ["src/models/*"],
      "@modules/*": ["src/modules/*"],
      "@generated/*": ["src/generated/*"],
      "@graphql/*": ["src/graphql/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
